import "@fontsource-variable/onest"
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Guillermo - Portafolio</title>
        <link rel="icon" type="image/png" href="/CreamBBQ.svg" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Onest:opsz,wght@8..144,100..900&display=swap" rel="stylesheet">
    </head>
    <body class="relative text-black dark:text-white min-h-screen flex flex-col
        bg-gray-50 dark:bg-gray-950
        bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(217,216,255,0.5),rgba(255,255,255,0.9))]
        dark:bg-[radial-gradient(#ffffff33_1px,#00091d_1px)]
        bg-no-repeat bg-fixed bg-center bg-cover
        dark:bg-repeat dark:bg-[size:20px_20px]">
        <Header />
        <main class="flex-1">
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style is:global>
    :root {
        color-scheme: light dark;
    }
    html, body {
        height: 100%;
        font-family: "Onest Variable", system-ui, sans-serif;
    }
</style>
